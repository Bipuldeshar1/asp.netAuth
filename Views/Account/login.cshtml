@using Asp.netAuth.Models.viewModel;
@model LoginVM

<div class="row">
    <div class="col-md-3 card p-3">
        <h2 class="text-center text-info">Login</h2>
        <form asp-action="Login" method="post">
          @*   <div asp-validation-summary="ModelOnly"> *@
                <div class="mb-1">
                    <label asp-for="username"></label>
                    <input asp-for="username" class="form-control" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="password"></label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-1">
                        <a asp-action="Register">No account? Register here.</a>
                    </div>
                    <div class="col-md-6 mb-1">
                        <input type="submit" value="Login" class="btn btn-outline-primary btn-sm float-end" />
                    </div>
         @*        </div> *@
            </div>
        </form>
    </div>
</div>
